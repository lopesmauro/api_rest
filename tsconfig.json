{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution":"Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "jest.config.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
