{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "lib": ["ES2023"],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts"
, "src/config/database.js"  ],
  "exclude": [
    "node_modules"
  ]
}
